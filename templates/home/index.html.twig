                                    <h2>{{ rs.price }}  DT</h2>
                                    <p>{{ rs.title}}</p>
                                    <a href="{{ path('product_show', {'id': rs.id}) }}" class="btn btn-default add-to-cart">Detail</a>                                
                            </div>
                        </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <div class="tab-pane fade" id="cat_4" >
