{% extends 'homebase.html.twig' %}

{% block title %}{{setting[0].title}}{% endblock %}
{% block keywords %}{{setting[0].keywords}}{% endblock %}
{% block description %}{{setting[0].description}}{% endblock %}

{% block body %}
    <section id="slider"><!--slider-->
        <div class="container">
            <div class="row">
                {% block slider %} {% include('home/slider.html.twig') %}{% endblock %}
            </div>
        </div>
    </section>
  
    <div class="col-sm-12 padding-right">

        <div class="features_items">
            <h2 class="title text-center">Features Items</h2>
            {% for rs in product %}
                <div class="col-sm-4">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                 <a href="{{ path('product_show', {'id': rs.id}) }} " class="btn btn-default add-to-cart">
                                    <img src="{{ asset('uploads/images/' ~ rs.image) }}" alt="" style="height: 268px; width: 249px;"/>
                                </a>
                                <h2>{{ rs.price }} DT</h2>
                                <p>{{ rs.title}} </p>
                                        <a href="{{ path('product_show', {'id': rs.id}) }}" class="btn btn-default add-to-cart">Detail</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="category-tab">
            <div class="col-sm-12">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#cat_1" data-toggle="tab">cat 1</a></li>
                    <li><a href="#cat_2" data-toggle="tab">cat 2</a></li>
                    <li><a href="#cat_3" data-toggle="tab">cat 3</a></li>
                    <li><a href="#cat_4" data-toggle="tab">cat 4</a></li>
                </ul>
            </div>
            <div class="tab-content">


            <div class="tab-pane fade active in" id="cat_1" >
                {% for rs in newproducts %}
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <a href="{{ path('product_show', {'id': rs.id}) }} ">
                                        <img src="{{ asset('uploads/images/' ~ rs.image) }}" alt="" />
                                    </a>
                                    <h2>{{ rs.price }}  DT</h2>
                                    <p>{{ rs.title}}</p>
                                        <a href="{{ path('product_show', {'id': rs.id}) }}" class="btn btn-default add-to-cart">Detail</a>                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>

                <div class="tab-pane fade" id="cat_2" >
                                   
                    {% for rs in newproducts %}
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <a href="{{ path('product_show', {'id': rs.id}) }} ">
                                            <img src="{{ asset('uploads/images/' ~ rs.image) }}" alt="" />
