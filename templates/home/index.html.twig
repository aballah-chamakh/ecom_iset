                                        <h2>{{ rs.price }}  DT</h2>
                                        <p>{{ rs.title}}</p>
                                        <a href="{{ path('product_show', {'id': rs.id}) }}" class="btn btn-default add-to-cart">Detail</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="tab-pane fade" id="cat_3" >
                    {% for rs in newproducts %}
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <a href="{{ path('product_show', {'id': rs.id}) }} ">
                                        <img src="{{ asset('uploads/images/' ~ rs.image) }}" alt="" />
